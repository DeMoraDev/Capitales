<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null"/>
    <TextView
        android:id="@+id/modos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Modos de juego"
        android:layout_marginTop="100dp"
        android:textColor="#3D91D2"
        android:textSize="24sp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <Button
        android:id="@+id/botonCapitales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capitales"
        android:textSize="30sp"
        android:backgroundTint="@color/colorBoton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modos"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/botonBanderas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banderas"
        android:textSize="30sp"
        android:backgroundTint="@color/colorBoton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/botonCapitales"

        />
    <Button
        android:id="@+id/botonLocalizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LocalizaciÃ³n"
        android:textSize="30sp"
        android:backgroundTint="@color/colorBoton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/botonBanderas"

        />





</androidx.constraintlayout.widget.ConstraintLayout>